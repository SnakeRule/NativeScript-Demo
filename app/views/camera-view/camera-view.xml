<Page loaded="loaded" id="cameraPage">

<ActionBar title="NativeScript camera demo" id="cameraActionBar" class="action-bar">

<NavigationButton android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>

</ActionBar>
<ScrollView orientation="vertical">
<StackLayout orientation="vertical">

<Label id="photoLabel" text="Snap a photo and upload" fontFamily="IcoMoon-Free"/>

<Image id="picResult" />

<Button id="takePicButton" class="takePicButton" text="&#xe90f; Take a picture" tap="takePicture" />
<Button id="takePicButton2" class="takePicButton" text="&#xe90f; Take another picture" tap="takePicture" visibility="collapsed"/>
<Button id="imgurUploadButton" text="&#xea82; Share image" tap="socialUpload" />

</StackLayout>
</ScrollView>

</Page>
